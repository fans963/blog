---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';

// Get all blog posts
const allPosts: CollectionEntry<'blog'>[] = await getCollection('blog');

// Sort posts by date (newest first)
const sortedPosts: CollectionEntry<'blog'>[] = allPosts.sort(
  (a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => b.data.date.getTime() - a.data.date.getTime()
);

// Get latest post
const latestPost = sortedPosts[0];

// Get unique categories with post count
const categoriesData = [...new Set(allPosts.map((post: CollectionEntry<'blog'>) => post.data.category))].map((category: string) => {
  const count = allPosts.filter((p: CollectionEntry<'blog'>) => p.data.category === category).length;
  return { name: category, count };
});

// Category icons mapping
const categoryIcons: Record<string, string> = {
  '前端': 'front_hand',
  '设计': 'brush',
  '编程': 'terminal',
  '技术': 'devices',
  '架构': 'apartment',
  '默认': 'category'
};

// Get icon for category
function getCategoryIcon(category: string): string {
  return categoryIcons[category] || categoryIcons['默认'];
}

// Format date
function formatDate(date: Date): string {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title="欢迎 - My Blog">
  <Navbar active="welcome" />

  <main class="welcome-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-bg">
        <div class="hero-blob blob-1"></div>
        <div class="hero-blob blob-2"></div>
      </div>

      <div class="container hero-content">
        <div class="hero-text">
          <div class="hero-eyebrow label-large">Material Design 3</div>
          <h1 class="display-medium hero-title">
            欢迎来到 <span class="highlight">My Blog</span>
          </h1>
          <p class="headline-small hero-subtitle">
            探索前沿技术 · 分享设计理念 · 构建优雅架构
          </p>

          <div class="hero-actions">
            <Button variant="filled" icon="explore" href="/blog">
              浏览文章
            </Button>
            <Button variant="tonal" icon="info" href="/about">
              关于本站
            </Button>
          </div>
        </div>

        <div class="hero-visual">
          {latestPost && (
            <a href={`/blog/${latestPost.slug}`} class="hero-card">
              <div class="hero-card-icon">
                <span class="material-symbols-outlined">edit</span>
              </div>
              <div class="hero-card-content">
                <span class="label-medium hero-card-category">最新文章</span>
                <h3 class="title-medium">{latestPost.data.title}</h3>
                <p class="body-small hero-card-desc">{latestPost.data.description}</p>
              </div>
              <div class="hero-card-arrow">
                <span class="material-symbols-outlined">arrow_forward</span>
              </div>
            </a>
          )}

          <div class="hero-stats">
            <div class="stat-item">
              <span class="stat-value headline-medium">{allPosts.length}</span>
              <span class="stat-label label-small">篇文章</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <span class="stat-value headline-medium">{categoriesData.length}</span>
              <span class="stat-label label-small">个分类</span>
            </div>
            <div class="stat-divider"></div>
            <div class="stat-item">
              <span class="stat-value headline-medium">MD3</span>
              <span class="stat-label label-small">设计风格</span>
            </div>
          </div>
        </div>
      </div>

      <div class="scroll-indicator">
        <div class="scroll-indicator-track"></div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="categories-section">
      <div class="container">
        <div class="section-header-center">
          <h2 class="headline-medium categories-title">探索分类</h2>
          <p class="body-large section-desc">按主题浏览文章</p>
        </div>

        <div class="categories-grid">
          {categoriesData.map((category) => (
            <a href={`/blog?category=${category.name}`} class="category-card-large">
              <div class="category-bg-icon">
                <span class="material-symbols-outlined">{getCategoryIcon(category.name)}</span>
              </div>
              <div class="category-content">
                <h3 class="title-large">{category.name}</h3>
                <p class="body-medium">{category.count} 篇文章</p>
              </div>
              <div class="category-arrow-large">
                <span class="material-symbols-outlined">arrow_forward</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Recent Posts Section -->
    <section class="recent-section">
      <div class="container">
        <div class="section-header-center">
          <h2 class="headline-medium section-title">最新文章</h2>
          <p class="body-large section-desc">保持技术敏感度</p>
        </div>

        <div class="recent-grid-large">
          {sortedPosts.slice(0, 6).map((post) => (
            <a href={`/blog/${post.slug}`} class="recent-card-large">
              <div class="recent-image-wrapper-large">
                <img src={post.data.image} alt={post.data.title} class="recent-image-large" loading="lazy" />
                <div class="recent-image-overlay">
                  <span class="material-symbols-outlined">read_more</span>
                </div>
              </div>
              <div class="recent-content-large">
                <div class="recent-meta-large">
                  <span class="recent-category-pill">{post.data.category}</span>
                  <span class="recent-date-large">{formatDate(post.data.date)}</span>
                </div>
                <h3 class="title-medium recent-title-large">{post.data.title}</h3>
                <p class="body-medium recent-desc-large">{post.data.description}</p>
              </div>
            </a>
          ))}
        </div>

        <div class="view-all-wrapper">
          <Button variant="tonal" icon="article" href="/blog">
            浏览全部文章
          </Button>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Base Styles */
  .welcome-page {
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: var(--color-md-background);
    padding: 2rem 0;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .hero-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.6;
  }

  .blob-1 {
    width: 800px;
    height: 800px;
    background: var(--color-md-primary-container);
    top: -300px;
    right: -200px;
    animation: float 25s ease-in-out infinite;
  }

  .blob-2 {
    width: 600px;
    height: 600px;
    background: var(--color-md-secondary-container);
    bottom: -200px;
    left: -150px;
    animation: float 30s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(40px, -40px) scale(1.05); }
    50% { transform: translate(-20px, 20px) scale(0.95); }
    75% { transform: translate(30px, 30px) scale(1.02); }
  }

  .hero-content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .hero-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-md-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .hero-eyebrow::before {
    content: '';
    width: 24px;
    height: 2px;
    background: var(--color-md-primary);
    border-radius: 1px;
  }

  .hero-title {
    color: var(--color-md-on-background);
    line-height: 1.1;
  }

  .highlight {
    background: linear-gradient(135deg, var(--color-md-primary), var(--color-md-tertiary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    color: var(--color-md-on-surface-variant);
    max-width: 480px;
    line-height: 1.4;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  /* Hero Visual */
  .hero-visual {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .hero-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--color-md-surface);
    border: 1px solid var(--color-md-outline-variant);
    border-radius: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .hero-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    border-color: var(--color-md-primary);
  }

  .hero-card-icon {
    width: 56px;
    height: 56px;
    border-radius: 1rem;
    background: var(--color-md-primary-container);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .hero-card-icon .material-symbols-outlined {
    font-size: 28px;
    color: var(--color-md-on-primary-container);
  }

  .hero-card-content {
    flex: 1;
    min-width: 0;
  }

  .hero-card-category {
    display: block;
    color: var(--color-md-primary);
    margin-bottom: 0.25rem;
  }

  .hero-card-content h3 {
    color: var(--color-md-on-surface);
    margin-bottom: 0.25rem;
  }

  .hero-card-desc {
    color: var(--color-md-on-surface-variant);
  }

  .hero-card-arrow {
    color: var(--color-md-primary);
  }

  /* Stats */
  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 1.5rem;
    background: var(--color-md-surface-variant);
    border-radius: 1.5rem;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  .stat-value {
    color: var(--color-md-on-surface);
    font-weight: 600;
  }

  .stat-label {
    color: var(--color-md-on-surface-variant);
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--color-md-outline-variant);
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .scroll-indicator-track {
    width: 2px;
    height: 48px;
    background: linear-gradient(to bottom, var(--color-md-primary), transparent);
    border-radius: 1px;
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.3; transform: scaleY(0.8); }
    50% { opacity: 1; transform: scaleY(1); }
  }

  /* Section Headers */
  .section-header-center {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header-center .section-title {
    color: var(--color-md-on-surface);
    margin-bottom: 0.5rem;
  }

  .section-header-center .section-desc {
    color: var(--color-md-on-surface-variant);
  }

  /* Categories Section */
  .categories-section {
    padding: 6rem 0;
    background: var(--color-md-surface);
  }

  .categories-title {
    text-align: center;
    margin-bottom: 0.5rem;
    color: var(--color-md-on-surface);
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.25rem;
  }

  .category-card-large {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.75rem;
    background: var(--color-md-surface-variant);
    border: 1px solid var(--color-md-outline-variant);
    border-radius: 1.5rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.2, 0, 0, 1);
    position: relative;
    overflow: hidden;
  }

  .category-card-large::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-md-primary-container), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .category-card-large:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
    border-color: var(--color-md-primary);
  }

  .category-card-large:hover::before {
    opacity: 1;
  }

  .category-card-large > * {
    position: relative;
    z-index: 1;
  }

  .category-bg-icon {
    width: 64px;
    height: 64px;
    border-radius: 1rem;
    background: var(--color-md-primary-container);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  .category-card-large:hover .category-bg-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .category-bg-icon .material-symbols-outlined {
    font-size: 32px;
    color: var(--color-md-on-primary-container);
  }

  .category-content {
    flex: 1;
    min-width: 0;
  }

  .category-content h3 {
    color: var(--color-md-on-surface);
    margin-bottom: 0.25rem;
  }

  .category-content p {
    color: var(--color-md-on-surface-variant);
  }

  .category-arrow-large {
    color: var(--color-md-on-surface-variant);
    transition: all 0.3s ease;
  }

  .category-card-large:hover .category-arrow-large {
    color: var(--color-md-primary);
    transform: translateX(4px);
  }

  .category-arrow-large .material-symbols-outlined {
    font-size: 24px;
  }

  /* Recent Posts Section */
  .recent-section {
    padding: 6rem 0;
    background: var(--color-md-background);
  }

  .recent-grid-large {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .recent-card-large {
    display: flex;
    flex-direction: column;
    background: var(--color-md-surface);
    border: 1px solid var(--color-md-outline-variant);
    border-radius: 1.5rem;
    overflow: hidden;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.2, 0, 0, 1);
  }

  .recent-card-large:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.12);
    border-color: var(--color-md-primary);
  }

  .recent-image-wrapper-large {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .recent-image-large {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .recent-card-large:hover .recent-image-large {
    transform: scale(1.08);
  }

  .recent-image-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .recent-card-large:hover .recent-image-overlay {
    opacity: 1;
  }

  .recent-image-overlay .material-symbols-outlined {
    color: white;
    font-size: 48px;
  }

  .recent-content-large {
    flex: 1;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
  }

  .recent-meta-large {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .recent-category-pill {
    padding: 0.375rem 1rem;
    background: var(--color-md-secondary-container);
    color: var(--color-md-on-secondary-container);
    border-radius: 2rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .recent-date-large {
    color: var(--color-md-on-surface-variant);
    font-size: 0.75rem;
  }

  .recent-title-large {
    color: var(--color-md-on-surface);
    margin-bottom: 0.5rem;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .recent-desc-large {
    color: var(--color-md-on-surface-variant);
    line-height: 1.5;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .view-all-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .hero-text {
      align-items: center;
    }

    .hero-subtitle {
      max-width: 100%;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-visual {
      width: 100%;
      max-width: 480px;
      margin: 0 auto;
    }

    .recent-grid-large {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .hero-section {
      min-height: auto;
      padding: 3rem 0 5rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-stats {
      flex-wrap: wrap;
      gap: 1.5rem;
    }

    .stat-divider {
      display: none;
    }

    .categories-grid {
      grid-template-columns: 1fr;
    }

    .recent-grid-large {
      grid-template-columns: 1fr;
    }
  }
</style>
