<script>
  // Reading progress persistence
  (function() {
    const STORAGE_KEY = 'blog_reading_progress';
    const articleSlug = window.location.pathname.split('/').pop() || '';
    
    // Save scroll position
    function saveProgress() {
      const scrollY = window.scrollY;
      const maxScroll = document.documentElement.scrollHeight - window.innerHeight;
      const progress = maxScroll > 0 ? (scrollY / maxScroll) * 100 : 0;
      
      try {
        const data = JSON.parse(localStorage.getItem(STORAGE_KEY) || '{}');
        data[articleSlug] = {
          scrollY,
          progress,
          timestamp: Date.now()
        };
        localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
      } catch (e) {
        console.warn('Failed to save reading progress:', e);
      }
    }

    // Restore scroll position
    function restoreProgress() {
      if (!articleSlug) return;
      
      try {
        const data = JSON.parse(localStorage.getItem(STORAGE_KEY) || '{}');
        const saved = data[articleSlug];
        
        if (saved && saved.timestamp) {
          // Only restore if saved within last 7 days
          const sevenDays = 7 * 24 * 60 * 60 * 1000;
          if (Date.now() - saved.timestamp < sevenDays && saved.scrollY > 100) {
            // Show "continue reading" indicator
            showResumeIndicator(saved.scrollY);
          }
        }
      } catch (e) {
        console.warn('Failed to restore reading progress:', e);
      }
    }

    // Show resume indicator
    function showResumeIndicator(targetScrollY) {
      let indicator = document.getElementById('resume-indicator');
      if (!indicator) {
        indicator = document.createElement('div');
        indicator.id = 'resume-indicator';
        indicator.className = 'fixed bottom-6 left-1/2 -translate-x-1/2 bg-[var(--color-md-primary-container)] text-[var(--color-md-on-primary-container)] px-4 py-2 rounded-full shadow-lg z-40 flex items-center gap-2 cursor-pointer transition-opacity duration-300';
        indicator.style.opacity = '0';
        indicator.innerHTML = `
          <span class="material-symbols-outlined text-sm">play_arrow</span>
          <span class="label-medium">继续阅读</span>
        `;
        
        // Click to resume reading
        indicator.addEventListener('click', () => {
          window.scrollTo({
            top: targetScrollY,
            behavior: 'smooth'
          });
          indicator.style.opacity = '0';
          setTimeout(() => indicator.remove(), 300);
        });
        
        document.body.appendChild(indicator);
        
        // Fade in
        requestAnimationFrame(() => {
          indicator.style.opacity = '1';
        });
        
        // Auto-hide after 5 seconds if not clicked
        setTimeout(() => {
          if (indicator.parentElement) {
            indicator.style.opacity = '0';
            setTimeout(() => {
              if (indicator.parentElement) indicator.remove();
            }, 300);
          }
        }, 5000);
      }
    }

    // Debounced save
    let saveTimeout: ReturnType<typeof setTimeout> | undefined;
    function debouncedSave() {
      clearTimeout(saveTimeout);
      saveTimeout = setTimeout(saveProgress, 500);
    }

    // Initialize
    if (articleSlug && document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        restoreProgress();
        window.addEventListener('scroll', debouncedSave, { passive: true });
      });
    } else if (articleSlug) {
      restoreProgress();
      window.addEventListener('scroll', debouncedSave, { passive: true });
    }
  })();
</script>
