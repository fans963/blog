            <a href={`/blog?category=${post.data.category}`} class="md-chip hover:opacity-80 transition-opacity">
              {post.data.category}
            </a>
            <span class="label-medium text-[var(--color-md-on-surface-variant)] flex items-center gap-1">
              <span class="material-symbols-outlined text-xs">calendar_today</span>
              {formattedDate}
            </span>
            <span class="label-medium text-[var(--color-md-on-surface-variant)] flex items-center gap-1">
              <span class="material-symbols-outlined text-xs">schedule</span>
              {calculateReadTime(post.body)}
            </span>
            <span class="label-medium text-[var(--color-md-on-surface-variant)] flex items-center gap-1">
              <span class="material-symbols-outlined text-xs">visibility</span>
              <ViewCount slug={post.slug} showLabel={false} icon={false} />
            </span>
          </div>

          <h1 class="headline-large text-[var(--color-md-on-background)] mb-6">
            {post.data.title}
          </h1>

          <div class="flex items-center gap-2 flex-wrap">
            {post.data.tags.map((tag) => (
              <span class="md-chip">{tag}</span>
            ))}
          </div>
        </header>

        <div class="max-w-3xl mx-auto">
