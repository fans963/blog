---
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import Button from '../../components/Button.astro';
import ShareButton from '../../components/ShareButton.astro';
import ReadingProgress from '../../components/ReadingProgress.astro';
import ImageViewer from '../../components/ImageViewer.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import ViewCount from '../../components/ViewCount.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content, headings } = await render(post);

// Transform Astro headings to our format
const tocHeadings = headings
  .filter((h) => h.depth <= 3) // Only h1, h2, h3
  .map((h) => ({
    id: h.slug,
    text: h.text,
    level: h.depth
  }));

const formattedDate = post.data.date.toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

function calculateReadTime(content: string): string {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  const minutes = Math.ceil(words / wordsPerMinute);
  return `${minutes} 分钟`;
}

const articleJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: post.data.title,
  description: post.data.description,
  image: post.data.image ? new URL(post.data.image, Astro.url) : undefined,
  datePublished: post.data.date.toISOString(),
  dateModified: post.data.date.toISOString(),
  author: {
    '@type': 'Person',
    name: 'My Blog',
    url: Astro.site
  },
  publisher: {
    '@type': 'Organization',
    name: 'My Blog',
    logo: {
      '@type': 'ImageObject',
      url: new URL('/favicon.svg', Astro.url)
    }
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': new URL(`/blog/${post.slug}`, Astro.site).toString()
  },
  articleSection: post.data.category,
  keywords: post.data.tags.join(', '),
  inLanguage: 'zh-CN'
};
---

<BaseLayout title={`${post.data.title} - My Blog`} image={post.data.image}>
  <script type="application/ld+json" set:html={JSON.stringify(articleJsonLd)} />
  <ReadingProgress />
  <TableOfContents headings={tocHeadings} />
  <Navbar />

  <main class="flex-1">
    <div class="relative h-[40vh] min-h-[300px] max-h-[500px] overflow-hidden">
      {post.data.image ? (
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-full object-cover"
        />
      ) : (
        <div class="w-full h-full bg-[var(--color-md-primary-container)]"></div>
      )}
