---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

const allPosts = await getCollection('blog');

const sortedPosts = allPosts.sort(
  (a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) =>
    b.data.date.getTime() - a.data.date.getTime()
);

const categoriesRaw = [...new Set(allPosts.map((post: CollectionEntry<'blog'>) => post.data.category))];
const categories: string[] = categoriesRaw as string[];

function formatDate(date: Date): string {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function calculateReadTime(content: string): string {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  const minutes = Math.ceil(words / wordsPerMinute);
  return `${minutes} 分钟`;
}
---

<BaseLayout title="文章归档 - My Blog">
  <Navbar active="blog" />

  <main class="blog-page">
    <!-- Header Section -->
    <header class="blog-header">
      <div class="header-bg">
        <div class="header-blob blob-1"></div>
        <div class="header-blob blob-2"></div>
      </div>

      <div class="container header-content">
        <div class="header-text">
          <h1 class="display-small header-title">文章归档</h1>
          <p class="body-large header-desc">探索技术前沿 · 分享设计理念</p>
        </div>
        
        <!-- Search Input -->
        <div class="header-search">
          <span class="material-symbols-outlined search-icon">search</span>
          <input
            type="text"
            id="blog-search"
            class="search-input"
            placeholder="搜索文章..."
            autocomplete="off"
          />
        </div>
      </div>
    </header>

    <!-- Category Filter -->
    <section class="category-section">
      <div class="container">
        <div class="category-filter" id="category-filter">
          <button
            class="md-chip md-chip-selected"
            data-category="all"
          >
            <span class="material-symbols-outlined">apps</span>
            全部
          </button>
          {categories.map((category) => (
            <button class="md-chip" data-category={category}>
              {category}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Posts Grid -->
    <section class="posts-section">
      <div class="container">
        <div class="posts-grid" id="posts-grid">
          {sortedPosts.map((post: CollectionEntry<'blog'>) => (
            <article class="post-card" data-category={post.data.category} data-title={post.data.title.toLowerCase()} data-desc={post.data.description.toLowerCase()}>
              <a href={`/blog/${post.slug}`} class="post-link">
                <div class="post-image-wrapper">
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="post-image"
                    loading="lazy"
                  />
                  <div class="post-image-overlay">
                    <span class="material-symbols-outlined">arrow_forward</span>
                  </div>
                </div>

                <div class="post-content">
                  <div class="post-meta">
                    <span class="post-category label-small">{post.data.category}</span>
                    <span class="post-date label-small">
                      <span class="material-symbols-outlined">calendar_today</span>
                      {formatDate(post.data.date)}
                    </span>
                  </div>

                  <h2 class="post-title title-medium">{post.data.title}</h2>
                  <p class="post-desc body-medium">{post.data.description}</p>

                  <div class="post-footer">
                    <div class="post-tags">
                      {post.data.tags.slice(0, 3).map((tag) => (
                        <span class="post-tag label-small">#{tag}</span>
                      ))}
                    </div>
                    <span class="post-read-time label-small">
                      <span class="material-symbols-outlined">schedule</span>
                      {calculateReadTime(post.body)}
                    </span>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>

        <div class="no-results hidden" id="no-results">
          <div class="no-results-icon">
            <span class="material-symbols-outlined">search_off</span>
          </div>
          <h3 class="title-large">没有找到文章</h3>
          <p class="body-medium">试试其他关键词或分类</p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  const categoryFilter = document.getElementById('category-filter');
  const postsGrid = document.getElementById('posts-grid');
  const noResults = document.getElementById('no-results');
  const postCards = postsGrid?.querySelectorAll('.post-card');
  const chips = categoryFilter?.querySelectorAll('.md-chip');
  const searchInput = document.getElementById('blog-search') as HTMLInputElement;

  // Get initial category and search from URL
  const urlParams = new URLSearchParams(window.location.search);
  const initialCategory = urlParams.get('category') || 'all';
  const initialSearch = urlParams.get('search') || '';
  const shouldFocus = urlParams.get('focus') === 'true';

  // Set initial search value
  if (searchInput) {
    searchInput.value = initialSearch;
    
    // Auto-focus if redirected from navbar
    if (shouldFocus) {
      searchInput.focus();
      // Remove focus param from URL without reload
      urlParams.delete('focus');
      window.history.replaceState({}, '', `${window.location.pathname}?${urlParams.toString()}`);
    }
  }

  // Set initial active chip
  chips?.forEach((chip) => {
    if (chip.getAttribute('data-category') === initialCategory) {
      chip.classList.add('md-chip-selected');
    } else {
      chip.classList.remove('md-chip-selected');
    }
  });

  // Filter posts by category and search
  function filterPosts(category: string, searchTerm: string = '') {
    let visibleCount = 0;
    const search = searchTerm.toLowerCase().trim();

    postCards?.forEach((card) => {
      const cardCategory = card.getAttribute('data-category');
      const title = card.getAttribute('data-title') || '';
      const desc = card.getAttribute('data-desc') || '';

      const matchesCategory = category === 'all' || cardCategory === category;
      const matchesSearch = !search || title.includes(search) || desc.includes(search);

      if (matchesCategory && matchesSearch) {
        (card as HTMLElement).style.display = '';
        card.classList.add('visible');
        visibleCount++;
      } else {
        (card as HTMLElement).style.display = 'none';
        card.classList.remove('visible');
      }
    });

    // Show/hide no results message
    if (noResults) {
      if (visibleCount === 0) {
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }
  }

  // Initialize filter with search from URL
  filterPosts(initialCategory, initialSearch);

  // Get current active category
  function getCurrentCategory(): string {
    const activeChip = categoryFilter?.querySelector('.md-chip-selected');
    return activeChip?.getAttribute('data-category') || 'all';
  }

  // Update URL with category and search
  function updateURL(category: string, search: string) {
    const url = new URL(window.location.href);
    
    if (category === 'all') {
      url.searchParams.delete('category');
    } else {
      url.searchParams.set('category', category);
    }
    
    if (search.trim()) {
      url.searchParams.set('search', search.trim());
    } else {
      url.searchParams.delete('search');
    }
    
    window.history.pushState({}, '', url);
  }

  // Click handler for category chips
  categoryFilter?.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    const chip = target.closest('.md-chip') as HTMLButtonElement;

    if (!chip) return;

    // Update active state
    chips?.forEach((c) => c.classList.remove('md-chip-selected'));
    chip.classList.add('md-chip-selected');

    // Get category and filter
    const category = chip.getAttribute('data-category') || 'all';
    const searchTerm = searchInput?.value || '';
    
    updateURL(category, searchTerm);
    filterPosts(category, searchTerm);
  });

  // Search input handler
  searchInput?.addEventListener('input', () => {
    const category = getCurrentCategory();
    const searchTerm = searchInput.value;
    
    updateURL(category, searchTerm);
    filterPosts(category, searchTerm);
  });

  // Handle browser back/forward
  window.addEventListener('popstate', () => {
    const params = new URLSearchParams(window.location.search);
    const category = params.get('category') || 'all';
    const search = params.get('search') || '';

    // Update search input
    if (searchInput) {
      searchInput.value = search;
    }

    // Update chip selection
    chips?.forEach((c) => {
      if (c.getAttribute('data-category') === category) {
        c.classList.add('md-chip-selected');
      } else {
        c.classList.remove('md-chip-selected');
      }
    });

    filterPosts(category, search);
  });
</script>

<style>
  .blog-page {
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header Section */
  .blog-header {
    position: relative;
    padding: 5rem 0 3rem;
    overflow: hidden;
    background: var(--color-md-surface);
  }

  .header-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .header-blob {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
  }

  .blob-1 {
    width: 500px;
    height: 500px;
    background: var(--color-md-primary-container);
    top: -150px;
    right: 10%;
  }

  .blob-2 {
    width: 400px;
    height: 400px;
    background: var(--color-md-secondary-container);
    bottom: -100px;
    left: 10%;
  }

  .header-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
  }

  .header-text {
    flex: 1;
  }

  .header-title {
    color: var(--color-md-on-surface);
    margin-bottom: 0.5rem;
  }

  .header-desc {
    color: var(--color-md-on-surface-variant);
  }

  .header-search {
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
    max-width: 400px;
  }

  .header-search .search-icon {
    position: absolute;
    left: 1rem;
    color: var(--color-md-on-surface-variant);
    font-size: 20px;
    pointer-events: none;
  }

  .header-search .search-input {
    width: 100%;
    padding: 0.875rem 1rem 0.875rem 3rem;
    background: var(--color-md-surface-variant);
    border: 2px solid transparent;
    border-radius: 1.5rem;
    font-size: 1rem;
    color: var(--color-md-on-surface);
    outline: none;
    transition: all 0.2s ease;
  }

  .header-search .search-input::placeholder {
    color: var(--color-md-on-surface-variant);
  }

  .header-search .search-input:focus {
    background: var(--color-md-surface);
    border-color: var(--color-md-primary);
    box-shadow: 0 0 0 4px var(--color-md-primary-container);
  }

  /* Category Section */
  .category-section {
    padding: 1.5rem 0 2rem;
    background: var(--color-md-surface);
    border-bottom: 1px solid var(--color-md-outline-variant);
  }

  .category-filter {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .md-chip {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.625rem 1.25rem;
    background: transparent;
    border: 1px solid var(--color-md-outline-variant);
    border-radius: 2rem;
    font-size: 0.875rem;
    color: var(--color-md-on-surface-variant);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .md-chip .material-symbols-outlined {
    font-size: 18px;
  }

  .md-chip:hover {
    background: var(--color-md-surface-variant);
  }

  .md-chip.md-chip-selected {
    background: var(--color-md-primary-container);
    border-color: var(--color-md-primary);
    color: var(--color-md-on-primary-container);
  }

  /* Posts Section */
  .posts-section {
    padding: 3rem 0 5rem;
    background: var(--color-md-background);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
    gap: 1.5rem;
  }

  .post-card {
    display: flex;
    flex-direction: column;
    background: var(--color-md-surface);
    border: 1px solid var(--color-md-outline-variant);
    border-radius: 1.5rem;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.2, 0, 0, 1);
    opacity: 0;
    transform: translateY(20px);
  }

  .post-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
    border-color: var(--color-md-primary);
  }

  .post-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    height: 100%;
  }

  .post-image-wrapper {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-image {
    transform: scale(1.05);
  }

  .post-image-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .post-image-overlay .material-symbols-outlined {
    color: white;
    font-size: 48px;
  }

  .post-card:hover .post-image-overlay {
    opacity: 1;
  }

  .post-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .post-category {
    padding: 0.25rem 0.75rem;
    background: var(--color-md-secondary-container);
    color: var(--color-md-on-secondary-container);
    border-radius: 1rem;
  }

  .post-date {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--color-md-on-surface-variant);
  }

  .post-date .material-symbols-outlined {
    font-size: 14px;
  }

  .post-title {
    color: var(--color-md-on-surface);
    margin-bottom: 0.5rem;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-desc {
    color: var(--color-md-on-surface-variant);
    line-height: 1.5;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-md-outline-variant);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-tag {
    color: var(--color-md-primary);
  }

  .post-read-time {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--color-md-on-surface-variant);
  }

  .post-read-time .material-symbols-outlined {
    font-size: 14px;
  }

  /* No Results */
  .no-results {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;
  }

  .no-results.hidden {
    display: none;
  }

  .no-results-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--color-md-surface-variant);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .no-results-icon .material-symbols-outlined {
    font-size: 40px;
    color: var(--color-md-on-surface-variant);
  }

  .no-results h3 {
    color: var(--color-md-on-surface);
    margin-bottom: 0.5rem;
  }

  .no-results p {
    color: var(--color-md-on-surface-variant);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-header {
      padding: 3rem 0 2rem;
    }

    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .header-actions {
      width: 100%;
    }

    .search-wrapper {
      width: 100%;
    }

    .search-input {
      width: 100%;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
