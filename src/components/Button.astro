---
import { Button as ReactButton } from './react/Button';

interface Props {
  variant?: 'filled' | 'tonal' | 'outlined' | 'text';
  size?: 'small' | 'medium' | 'large';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
  icon?: string;
  iconPosition?: 'start' | 'end';
}

const {
  variant = 'filled',
  size = 'medium',
  href,
  type = 'button',
  disabled = false,
  fullWidth = false,
  icon,
  iconPosition = 'start',
} = Astro.props;
---

<ReactButton
  client:load
  variant={variant}
  size={size}
  href={href}
  type={type}
  isDisabled={disabled}
  fullWidth={fullWidth}
  icon={icon}
  iconPosition={iconPosition}
>
  <slot />
</ReactButton>
