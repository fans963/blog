---
import { ArticleCardComponent } from './angular/article-card.component';

interface Props {
  title: string;
  description: string;
  date: Date;
  category: string;
  tags: string[];
  image?: string;
  slug: string;
  featured: boolean;
}

const { title, description, date, category, tags, image, slug, featured } = Astro.props;
---

<ArticleCardComponent
  title={title}
  description={description}
  date={date}
  category={category}
  tags={tags}
  image={image}
  slug={slug}
  featured={featured}
  client:load
/>
