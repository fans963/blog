---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const posts = await getCollection('blog');

const searchPosts = posts.map((post: CollectionEntry<'blog'>) => ({
  title: post.data.title,
  description: post.data.description,
  href: `/blog/${post.slug}`,
  category: post.data.category,
  tags: post.data.tags,
}));
---

<button
  id="search-trigger"
  class="md-icon-button text-[var(--color-md-on-surface-variant)]"
  aria-label="搜索"
>
  <span class="material-symbols-outlined">search</span>
</button>

<div id="search-modal" class="search-modal hidden" data-posts={JSON.stringify(searchPosts)}>
  <div class="search-dialog">
    <div class="search-input-container">
      <span class="search-icon material-symbols-outlined">search</span>
      <input
        type="text"
        id="search-input"
        placeholder="搜索文章、分类、标签..."
        class="search-input"
        autocomplete="off"
      />
      <div class="search-actions">
        <kbd class="search-shortcut">ESC</kbd>
      </div>
    </div>

    <div id="search-results" class="search-results">
      <div class="search-welcome">
        <div class="search-welcome-icon">
          <span class="material-symbols-outlined">search</span>
        </div>
        <p class="search-welcome-text">输入关键词搜索文章</p>
        <div class="search-shortcuts">
          <span class="shortcut-item">
            <kbd>↑</kbd><kbd>↓</kbd><span>选择</span>
          </span>
          <span class="shortcut-item">
            <kbd>⏎</kbd><span>打开</span>
          </span>
        </div>
      </div>
    </div>

    <div class="search-footer">
      <span class="search-result-count" id="search-result-count"></span>
    </div>
  </div>
</div>

<script>
  // Type definitions
  interface SearchPost {
    title: string;
    description: string;
    href: string;
    category: string;
    tags: string[];
  }

  // Wait for DOM to be ready
  function initSearch() {
    const searchTrigger = document.getElementById('search-trigger') as HTMLButtonElement | null;
    const searchModal = document.getElementById('search-modal') as HTMLElement | null;
    const searchInput = document.getElementById('search-input') as HTMLInputElement | null;
    const searchResults = document.getElementById('search-results') as HTMLElement | null;
    const searchResultCount = document.getElementById('search-result-count') as HTMLElement | null;

    if (!searchModal || !searchTrigger) {
      console.error('Search modal elements not found');
      return;
    }

    // Get posts from data attribute
    const postsData = (searchModal as HTMLElement).dataset.posts;
    const searchPosts: SearchPost[] = postsData ? JSON.parse(postsData) : [];

    let selectedIndex = 0;
    let filteredPosts = searchPosts;

    function escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function highlightMatch(text: string, query: string): string {
      if (!query) return escapeHtml(text);
      const escapedQuery = query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
      const regex = new RegExp(`(${escapedQuery})`, 'gi');
      return escapeHtml(text).replace(regex, '<mark class="highlight">$1</mark>');
    }

    function openSearch() {
      searchModal?.classList.remove('hidden');
      searchInput?.focus();
      document.body.style.overflow = 'hidden';
      selectedIndex = 0;
      renderResults();
    }

    function closeSearch() {
      searchModal?.classList.add('hidden');
      if (searchInput) searchInput.value = '';
      document.body.style.overflow = '';
      filteredPosts = searchPosts;
    }

    function renderResults() {
      if (!searchResults || !searchResultCount) return;

      const query = searchInput?.value.toLowerCase().trim() || '';

      if (!query) {
        filteredPosts = searchPosts;
        searchResults.innerHTML = `
          <div class="search-welcome">
            <div class="search-welcome-icon">
              <span class="material-symbols-outlined">search</span>
            </div>
            <p class="search-welcome-text">输入关键词搜索文章</p>
            <div class="search-shortcuts">
              <span class="shortcut-item">
                <kbd>&#8593;</kbd><kbd>&#8595;</kbd><span>选择</span>
              </span>
              <span class="shortcut-item">
                <kbd>&#9166;</kbd><span>打开</span>
              </span>
            </div>
          </div>
        `;
        searchResultCount.textContent = `${searchPosts.length} 篇文章`;
        return;
      }

      filteredPosts = searchPosts.filter((post: SearchPost) =>
        post.title.toLowerCase().includes(query) ||
        post.description.toLowerCase().includes(query) ||
        post.category.toLowerCase().includes(query) ||
        post.tags.some((tag: string) => tag.toLowerCase().includes(query))
      );

      searchResultCount.textContent = `找到 ${filteredPosts.length} 篇文章`;

      if (filteredPosts.length === 0) {
        searchResults.innerHTML = `
          <div class="search-empty">
            <div class="search-empty-icon">
              <span class="material-symbols-outlined">search_off</span>
            </div>
            <p class="search-empty-text">没有找到相关内容</p>
            <p class="search-empty-hint">试试其他关键词</p>
          </div>
        `;
        return;
      }

      searchResults.innerHTML = `<ul class="search-list" role="listbox">
        ${filteredPosts.map((post: SearchPost, index: number) => `
          <li role="option" aria-selected="${index === selectedIndex}">
            <a href="${post.href}" class="search-item ${index === selectedIndex ? 'selected' : ''}" data-index="${index}" role="button" tabindex="-1">
              <div class="search-item-icon">
                <span class="material-symbols-outlined">article</span>
              </div>
              <div class="search-item-main">
                <div class="search-item-header">
                  <span class="search-item-category">${highlightMatch(post.category, query)}</span>
                  <h3 class="search-item-title">${highlightMatch(post.title, query)}</h3>
                </div>
                <p class="search-item-desc">${highlightMatch(post.description, query)}</p>
                <div class="search-item-tags">
                  ${post.tags.map((tag: string) => `<span class="search-tag">${highlightMatch(tag, query)}</span>`).join('')}
                </div>
              </div>
              <div class="search-item-arrow">
                <span class="material-symbols-outlined">chevron_right</span>
              </div>
            </a>
          </li>
        `).join('')}
      </ul>`;

      searchResults.querySelectorAll('.search-item').forEach((item, idx) => {
        const htmlItem = item as HTMLElement;
        item.addEventListener('click', (e: Event) => {
          e.preventDefault();
          const index = parseInt(htmlItem.dataset.index || '0');
          window.location.href = filteredPosts[index].href;
        });

        item.addEventListener('mouseenter', () => {
          selectedIndex = idx;
          updateSelection();
        });
      });
    }

    function updateSelection() {
      if (!searchResults) return;

      searchResults.querySelectorAll('.search-item').forEach((item, index) => {
        item.classList.toggle('selected', index === selectedIndex);
        item.setAttribute('aria-selected', String(index === selectedIndex));
      });

      scrollSelectedIntoView();
    }

    function scrollSelectedIntoView() {
      const selected = searchResults?.querySelector('.search-item.selected');
      selected?.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
    }

    function handleKeydown(e: KeyboardEvent) {
      if (searchModal?.classList.contains('hidden')) return;

      if (e.key === 'Escape') {
        e.preventDefault();
        closeSearch();
      } else if (e.key === 'ArrowDown') {
        e.preventDefault();
        if (filteredPosts.length > 0) {
          selectedIndex = (selectedIndex + 1) % filteredPosts.length;
          updateSelection();
        }
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        if (filteredPosts.length > 0) {
          selectedIndex = (selectedIndex - 1 + filteredPosts.length) % filteredPosts.length;
          updateSelection();
        }
      } else if (e.key === 'Enter') {
        e.preventDefault();
        if (filteredPosts[selectedIndex]) {
          window.location.href = filteredPosts[selectedIndex].href;
        }
      }
    }

    // Event listeners
    searchTrigger.addEventListener('click', (e: Event) => {
      e.preventDefault();
      openSearch();
    });

    searchInput?.addEventListener('input', () => {
      selectedIndex = 0;
      renderResults();
    });

    document.addEventListener('keydown', handleKeydown);

    // Close when clicking outside
    searchModal.addEventListener('click', (e: MouseEvent) => {
      if (e.target === searchModal) {
        closeSearch();
      }
    });

    // Keyboard shortcut to open search
    document.addEventListener('keydown', (e: KeyboardEvent) => {
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        openSearch();
      }
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSearch);
  } else {
    initSearch();
  }
</script>

<style>
  .search-modal.hidden {
    display: none;
  }

  .search-modal {
    position: fixed;
    inset: 0;
    z-index: 100;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 15vh;
    font-family: var(--md-font-family);
  }

  .search-dialog {
    position: relative;
    width: 100%;
    max-width: 48rem;
    margin: 0 1rem;
    background: var(--color-md-surface);
    border-radius: 1.5rem;
    box-shadow:
      0 8px 30px rgba(0, 0, 0, 0.12),
      0 4px 12px rgba(0, 0, 0, 0.08),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    animation: slideIn 0.2s cubic-bezier(0.2, 0, 0, 1);
    overflow: hidden;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .search-input-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--color-md-outline-variant);
  }

  .search-icon {
    color: var(--color-md-on-surface-variant);
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .search-input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    font-size: 1.125rem;
    color: var(--color-md-on-surface);
    font-family: inherit;
  }

  .search-input::placeholder {
    color: var(--color-md-on-surface-variant);
    opacity: 0.7;
  }

  .search-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .search-shortcut {
    padding: 0.25rem 0.5rem;
    background: var(--color-md-surface-variant);
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-family: inherit;
    color: var(--color-md-on-surface-variant);
    border: none;
  }

  .search-results {
    max-height: 60vh;
    overflow-y: auto;
  }

  .search-welcome {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 3rem 1.5rem;
    color: var(--color-md-on-surface-variant);
  }

  .search-welcome-icon {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    background: var(--color-md-surface-variant);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .search-welcome-icon .material-symbols-outlined {
    font-size: 2rem;
    color: var(--color-md-on-surface-variant);
  }

  .search-welcome-text {
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .search-shortcuts {
    display: flex;
    gap: 1.5rem;
  }

  .shortcut-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: var(--color-md-on-surface-variant);
  }

  .shortcut-item kbd {
    padding: 0.25rem 0.375rem;
    background: var(--color-md-surface-variant);
    border-radius: 0.25rem;
    font-size: 0.625rem;
    font-family: inherit;
    min-width: 1.25rem;
    text-align: center;
  }

  .search-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 3rem 1.5rem;
    color: var(--color-md-on-surface-variant);
  }

  .search-empty-icon {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    background: var(--color-md-error-container);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .search-empty-icon .material-symbols-outlined {
    font-size: 2rem;
    color: var(--color-md-on-error-container);
  }

  .search-empty-text {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .search-empty-hint {
    font-size: 0.875rem;
    opacity: 0.7;
  }

  .search-list {
    list-style: none;
    padding: 0.5rem;
    margin: 0;
  }

  .search-list li {
    margin-bottom: 0.25rem;
  }

  .search-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.15s ease;
    cursor: pointer;
    position: relative;
    transform: translateX(0);
  }

  .search-item:hover {
    background: var(--color-md-surface-variant);
  }

  .search-item.selected {
    background: var(--color-md-primary-container);
    transform: translateX(4px);
    box-shadow: none;
  }

  .search-item.selected::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 60%;
    background: var(--color-md-primary);
    border-radius: 0 2px 2px 0;
  }

  .search-item-icon {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    background: var(--color-md-surface-variant);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.15s ease;
  }

  .search-item-icon .material-symbols-outlined {
    font-size: 1.25rem;
    color: var(--color-md-on-surface-variant);
    transition: all 0.15s ease;
  }

  .search-item.selected .search-item-icon {
    background: var(--color-md-primary);
    transform: scale(1.1);
  }

  .search-item.selected .search-item-icon .material-symbols-outlined {
    color: var(--color-md-on-primary);
  }

  .search-item-main {
    flex: 1;
    min-width: 0;
  }

  .search-item-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.25rem;
    flex-wrap: wrap;
  }

  .search-item-category {
    display: inline-flex;
    align-items: center;
    padding: 0.125rem 0.5rem;
    background: var(--color-md-secondary-container);
    border-radius: 0.25rem;
    font-size: 0.75rem;
    color: var(--color-md-on-secondary-container);
    font-weight: 500;
  }

  .search-item-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-md-on-surface);
    margin: 0;
    flex: 1;
    min-width: 0;
    transition: color 0.15s ease;
  }

  .search-item.selected .search-item-title {
    color: var(--color-md-primary);
  }

  .search-item-desc {
    font-size: 0.8125rem;
    color: var(--color-md-on-surface-variant);
    margin: 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.15s ease;
  }

  .search-item.selected .search-item-desc {
    color: var(--color-md-on-surface);
  }

  .search-item-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: 0.5rem;
  }

  .search-tag {
    font-size: 0.6875rem;
    color: var(--color-md-on-surface-variant);
    padding: 0.125rem 0.375rem;
    background: var(--color-md-surface-variant);
    border-radius: 0.25rem;
  }

  .search-item-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    flex-shrink: 0;
    opacity: 0;
    transition: all 0.2s ease;
    transform: translateX(-8px);
  }

  .search-item.selected .search-item-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .search-item-arrow .material-symbols-outlined {
    font-size: 1.25rem;
    color: var(--color-md-primary);
  }

  .search-footer {
    padding: 0.75rem 1.5rem;
    border-top: 1px solid var(--color-md-outline-variant);
    background: var(--color-md-surface);
  }

  .search-result-count {
    font-size: 0.75rem;
    color: var(--color-md-on-surface-variant);
  }

  .highlight {
    background: rgba(var(--md-sys-color-primary), 0.2);
    color: var(--color-md-primary);
    padding: 0 0.125rem;
    border-radius: 0.125rem;
    font-weight: 500;
  }
</style>
